{% extends 'baseadd.html.twig' %}

{% block title %}{{ 'Partners' | trans }}{% endblock %}

{% block body %}

    <h1>{{ 'Partners index' | trans }}</h1>
       {% if pagination %}
           {% for partner in pagination %}
                <div class="col-sm-12">
                    <h4>{{ partner.name }}</h4>
                    <div class="row">
                        <div class="col-md-9 col-sm-12">
                            {{ partner.description }}
                        </div>
                        <div class="col-md-3 col-sm-12">
                            <a href="{{ asset(partner.href) }}" target="_blank">
                                <img class="partners_picture" src="{{ asset('images/partners/' ~ partner.picture) }}" title="{{ partner.name }}" alt="{{ partner.name }}"/>
                            </a>
                       </div>
                    </div>
                </div>
           {% endfor %}
       {% else %}
            {{ 'no records found' | trans }}
       {% endif %}

{% endblock %}

{% block pagination %}
    {{ knp_pagination_render(pagination) }}
{% endblock %}