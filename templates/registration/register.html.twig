{# templates/registration/register.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <h3>{{ 'Register yourself' | trans }}</h3>
{{ form_start(form) }}
{{ form_errors(form) }}

    <div class="form-group">
        {{ form_errors(form.username) }}
        {{ form_widget(form.username, {'attr':{'class':'form-control'}}) }}
        {{ form_help(form.username) }}
    </div>

    <div class="form-group">
        {{ form_errors(form.email) }}
        {{ form_widget(form.email, {'attr':{'class':'form-control'}}) }}
        {{ form_help(form.email) }}
    </div>

    <div class="form-group">
        {{ form_errors(form.plainPassword.first) }}
        {{ form_widget(form.plainPassword.first, {'attr':{'class':'form-control'}}) }}
        {{ form_help(form.plainPassword.first) }}
    </div>

    <div class="form-group">
        {{ form_errors(form.plainPassword.second) }}
        {{ form_widget(form.plainPassword.second, {'attr':{'class':'form-control'}}) }}
        {{ form_help(form.plainPassword.second) }}
    </div>

    <div class="form-group">
        {{ form_errors(form.is_active) }}
        {{ form_widget(form.is_active, {'attr':{'class':'form-control', 'value': '1'}}) }}
        {{ form_help(form.is_active) }}
    </div>

    <div class="form-group">
        {{ form_errors(form.is_admin) }}
        {{ form_widget(form.is_admin, {'attr':{'class':'form-control', 'value': '0'}}) }}
        {{ form_help(form.is_admin) }}
    </div>
    <button type="submit">{{ 'Register!' | trans }}</button>
{{ form_end(form) }}
{% endblock %}