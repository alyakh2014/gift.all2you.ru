{% extends 'base_oneside.html.twig' %}

{% block title %}User index{% endblock %}

{% block mainbody %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>UserEmail</th>
                <th>UserPassword</th>
                <th>IsActive</th>
                <th>IsAdmin</th>
                <th>Age of user</th>
                <th>Gender of user</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.isActive ? 'Yes' : 'No' }}</td>
                <td>{{ user.isAdmin ? 'Yes' : 'No' }}</td>
                <td>{{ user.userage }}</td>
                <td>{{ user.gender }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">showUser</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">editUser</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
