{% extends 'baseadd.html.twig' %}

{% block title %}{{ 'Recovery Password' | trans }}{% endblock %}

{% block body %}
    <div class="col-sm-12">
        <h1>{{ 'Recovery Password' | trans }}</h1>
    </div>
    {% for message in app.flashes('notice') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}

    <div class="col-sm-12">
        {{ form_start(form, {'attr' : {'id' : 'edit_user_form'}}) }}
        {{ form_errors(form) }}
        <div class="form-group">
            {{ form_label(form.email) }}
            {{ form_errors(form.email) }}
            {{ form_errors(form.email) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_help(form.email) }}
        </div>
        <button type="submit" class="btn btn-primary">{{ 'Recovery Password' | trans }}</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
