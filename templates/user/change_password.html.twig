{% extends 'base.html.twig' %}

{% block title %}{{ 'Edit User' | trans }}{% endblock %}

{% block body %}
    <div class="col-sm-12">
        <h1>{{ 'Edit User' | trans }}</h1>
    </div>
    {% for message in app.flashes('notice') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}

    <div class="col-sm-12">
        {{ form_start(form, {'attr' : {'id' : 'edit_user_form'}}) }}
        {{ form_errors(form) }}
        <div class="form-group">
            {{ form_label(form.plainPassword.first) }}
            {{ form_errors(form.plainPassword.first) }}
            {{ form_errors(form.plainPassword.first) }}
            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
            {{ form_help(form.plainPassword.first) }}
        </div>
        <div class="form-group">
            {{ form_label(form.plainPassword.second) }}
            {{ form_errors(form.plainPassword.second) }}
            {{ form_errors(form.plainPassword.second) }}
            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
            {{ form_help(form.plainPassword.second) }}
        </div>
        <button type="submit" class="btn btn-primary">{{ 'Change password' | trans }}</button>
        <button class="btn btn-primary"><a href="{{ path('user_edit') }}">{{ 'Update' | trans }}</a></button>
        {{ form_end(form) }}
        {# {{ include('user/_form.html.twig', {'button_label': 'Update' | trans}) }}#}

        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('user_index') }}">back to list</a>

            {#}{ include('user/_delete_form.html.twig') }#}

        {% endif %}
    </div>
{% endblock %}
